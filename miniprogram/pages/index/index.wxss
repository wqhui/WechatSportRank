/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}
.tab{
  display: flex;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.tab .item {
  color: #666;
  display: flex;
  flex-grow: 1;
  padding: 15rpx 0;
  justify-content: center
}
.tab .active {
  color: ForestGreen;
  border-bottom: 1px solid ForestGreen;
}
.no-userinfo{
  display: flex;

  background-color: #FFE7E4;
  color:#FD6C6A;
  font-size: 25rpx;
  height: 50rpx;
  align-self:stretch;
}
.no-userinfo .tips-box{
  display: flex;
  align-items: center;
  flex-grow: 1;
  justify-content: center;
}
.no-userinfo icon{
  margin:0 8rpx;
}
.user-today-step {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-direction: column;
  background: #ffffff;
  flex-grow: 0;
  flex-shrink: 0;
}

.user-btn{
    height: 100rpx;
  margin: 20rpx;
    background-color: white;
    border:1px solid GoldenRod;
    color:#666;
}

.userinfo-avatar {
  width: 100rpx;
  border-radius: 50%;
  background-size: cover;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

